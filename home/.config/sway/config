#
# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
bar {
    position top

    status_command /home/andrew/.cargo/bin/i3status-rs

    font Fira Code Retina 15

    wrap_scroll on
    output DP-2
    output DP-3

    tray_padding 4
    tray_output DP-3

    status_edge_padding 2

    gaps 5 196

    mode hide

    colors {
        statusline $txt_color
        background #323232ee
	focused_workspace #323232 $main_color $txt_color
	urgent_workspace #323232 $main2_color $txt_color
        active_workspace #323232 #323232ee #ffffff
        inactive_workspace #323232 #323232dd #9f9f9f
    }
}

client.focused $main_color $main_color $txt_color $main2_color
client.focused_inactive #323232 #443a33 #dddddd #323232

font Fira Code 12
gaps inner 8
gaps outer 6

include /etc/sway/config.d/*
