# configure inputs and outputs

output DP-1 pos 0 0 res 2160x3840 transform 90
output DP-2 pos 2160 0 res 3840x2160
output DP-3 pos 6000 0 res 3840x2160
output HDMI-A-1 pos 9840 0 res 2160x3840 transform 270

workspace side-monitor output DP-1
workspace 1 output DP-2
workspace 2 output DP-3
workspace 11 output HDMI-A-1

input "type:keyboard" {
	xkb_layout us
	xkb_options caps:escape
}


