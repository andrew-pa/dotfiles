* {
    font-size: x-large;
    font-family: Fira Code;
    color: ~~!$fg!;
}

#window {
    background-color: ~~!a$bg a90!;
    border: 1px solid ~~!$border!;
    border-radius: 8px;
}

#scroll {
    padding: 0.5em;
    border-radius: 8px;
}

#input {
    margin: 0.5em;
    padding: 0.5em;
    background-color: transparent;
    border: none;
}

#entry:selected {
    border: 3px solid ~~!$border!;
    border-radius: 8px;
    background-color: inherit;
}
